out_pfx = [dir_path] $out_root/include/
src_pfx = [dir_path] $src_root/include/

lib{opencv-config}:
{
  cxx.export.poptions = "-I$out_pfx" "-I$src_pfx"
  cxx.export.libs = $intf_libs
}

# Install recreating subdirectories.
#
{hxx ixx txx}{*}:
{
  install         = include/
  install.subdirs = true
}
